<UserControl x:Class="Joystick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:窗口调节器"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128">
    <Grid>
        <Ellipse Fill="LightGray" Width="100" Height="100"/>
        <Ellipse x:Name="JoystickHatBack" Fill="Black" Width="80" Height="80"/>
        <Ellipse x:Name="JoystickHat" Fill="Gray" Width="80" Height="80">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="JoystickTransform" />
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</UserControl>
